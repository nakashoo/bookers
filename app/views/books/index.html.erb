<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><a href="/books/:id" >Show</a></td>
    <td><a href="/books/:id/edit" >Edit</a></td>
    <td><a href="/books/:id" >destroy</a></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
  </tfoot>
</table>





<h1>New book</h1>
<%= form_with model: @book,url:'/books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>

  <h4>Body</h4>
  <%= f.text_area:body %>

  <%= f.submit'Create Book' %>
<% end %>